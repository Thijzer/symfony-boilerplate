<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Entity\Article" table="Article" repository-class="App\Repository\ArticleRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="title" type="string"/>
        <field name="author" type="string" length="100"/>
        <field name="body" type="text"/>
        <field name="image" type="string" length="20"/>
        <field name="tags" type="text"/>

        <many-to-one field="comments" target-entity="Comment" />

        <field name="created" type="datetime"/>
        <field name="updated" type="datetime"/>
        <field name="slug" type="string"/>

        <many-to-one field="categories" target-entity="Category" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="setUpdatedValue"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>