{% extends 'layout.html.twig' %}
{% block title %}{% trans %}blog.contact{% endtrans %}{% endblock%}

{% block body %}
    <header>
        <h1>{% trans %}blog.contact{% endtrans %} symblog</h1>
    </header>

    {% for flashMessage in app.session.flashbag.get('blogger-notice') %}
    <div class="blogger-notice">
        {{ flashMessage }}
    </div>
    {% endfor %}

    <p>{{ trans('blog.contact.title')}}</p>

    {{ form_start(form, { 'attr' : { 'class': 'blogger' } }) }}

    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.subject) }}
    {{ form_row(form.body) }}

<input type="submit" value="Submit" />

{{ form_end(form) }}

{% endblock %}